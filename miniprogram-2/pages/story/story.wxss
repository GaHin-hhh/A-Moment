page{
   background-color:rgb(243, 243, 243);
}
.container{
  height: 100vh;
}
.line{
height: 5px;
background: #cccccc;
margin-top: 10px;
}
.top_data{
  height: 70px;
  display: flex;
  padding: 5px;
}
.top_icon_l{
width: 10px;
height: 10px;
margin-top: 25px;
}
.top_icon_r{
width: 15px;
height: 15px;
margin-top: 35px;
