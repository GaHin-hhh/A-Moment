}
.data_day{
  font-size: 24px;
  padding: 10px;
  font: bold;
}
.more{
  font-size: 12px;
  font: bold;
  margin-top:45px;
}
.data_year
{
  font-size: 12px;
  font: bold;
  padding: 10px;
  padding-left: 0;
  margin-top: 10px;
}
.story_view{
  padding: 10px;
}
.story_view .name{
  font: bold;
  font-size: 20px;
}
.story_view .author{
  font-size: 13px;
  margin-top: 2px;
  color: #666666;
}
.story_view .story_type
{
  font-size: 12px;
  text-align: center;
  color: #666666;
  padding-bottom: 20px;

}

.story_view .img{
  width: 100%;
  border-radius: 5px;
  background: rgb(243, 243, 243);
  height: 200px;
 margin-top: 5px;
}
.story_view .txt{
  font-size: 14px;
  color: #666666;
  padding-top: 10px; 
  padding-bottom: 20px; 
  line-height: 25px;
