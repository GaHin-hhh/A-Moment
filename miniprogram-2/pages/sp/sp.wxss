/* pages/sp/sp.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: row;
  margin-bottom: 0rpx;
}
.title {
  font-size: 35rpx;
  color: rgb(97, 94, 94);
  text-align: justify;
  margin-left: 10px
}
.detail .price {
    display: flex;
  color: black;
  font-size: 53rpx;
  float: right;
  margin-left: 240px;
}
.detail .xiaoliang {
  color:#747474;
  margin-left:10px;
  font-size:15px;
  margin-top: 10px 
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green {
  background-color: #b3b0b0; /* Green */
}
.button-red {
  background-color: #5a5e5a; /* 红色 */
}
.image_detail {
  width: 100%;
  
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
/* 占位 */
.temp {
  height: 100rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}

.biaolan{
  background-color: #5a5e5a;
  width: 100%;
  color: #fff;
  margin-top:3px 
}